@model IEnumerable<SacramentPlanner.Models.Agenda>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Section)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Special_Event_Text)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subject)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Directory)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hymn)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Section)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Special_Event_Text)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Subject)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Directory.First_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hymn.HymnID)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AgendaID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.AgendaID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.AgendaID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
