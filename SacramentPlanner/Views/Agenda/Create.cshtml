@model SacramentPlanner.Models.Agenda

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Agenda</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group hide" id="MeetingID-div">
                <label asp-for="MeetingID" class="control-label"></label>
                <select asp-for="MeetingID" class="form-control" asp-items="ViewBag.MeetingID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Section" class="control-label"></label>
                <select asp-for="Section" class="form-control" id="sectionDropdown" asp-items="Html.GetEnumSelectList<Category>()"></select>
                <span asp-validation-for="Section" class="text-danger"></span>
            </div>
            <div class="form-group" id="MemberID-div">
                <label asp-for="MemberID" class="control-label"></label>
                <select asp-for="MemberID" class="form-control" asp-items="ViewBag.MemberID"></select>
            </div>
            <div class="form-group hide" id="HymnID-div">
                <label asp-for="HymnID" class="control-label"></label>
                <select asp-for="HymnID" class="form-control" asp-items="ViewBag.HymnID"></select>
            </div>
            <div class="form-group hide" id="Special_Event-div">
                <label asp-for="Special_Event_Text" class="control-label"></label>
                <input asp-for="Special_Event_Text" class="form-control" />
                <span asp-validation-for="Special_Event_Text" class="text-danger"></span>
            </div>
            <div class="form-group" id="Subject-div">
                <label asp-for="Subject" class="control-label"></label>
                <input asp-for="Subject" class="form-control" />
                <span asp-validation-for="Subject" class="text-danger"></span>
            </div>
            <div class="form-group" id="Notes-div">
                <label asp-for="Notes" class="control-label"></label>
                <input asp-for="Notes" class="form-control" />
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
