@model SacramentPlanner.Models.Directory

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Directory</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DirectoryID" />
            <div class="form-group">
                <label asp-for="WardID" class="control-label"></label>
                <select asp-for="WardID" class="form-control" asp-items="ViewBag.WardID"></select>
                <span asp-validation-for="WardID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="First_Name" class="control-label"></label>
                <input asp-for="First_Name" class="form-control" />
                <span asp-validation-for="First_Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Last_Name" class="control-label"></label>
                <input asp-for="Last_Name" class="form-control" />
                <span asp-validation-for="Last_Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Age" class="control-label"></label>
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <p>Gender: </p>
            <select class="form-control" asp-for="Sex" asp-items="Html.GetEnumSelectList<Gender>()">
                <option selected="selected" value="">Please select</option>
            </select>
            <p>Calling: </p>
            <select class="form-control" asp-for="Calling" asp-items="Html.GetEnumSelectList<Title>()">
                <option selected="selected" value="">Please select</option>
            </select>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
